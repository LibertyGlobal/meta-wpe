# # Provides configuration for the Monitor Plugin

PLUGIN_MONITOR_WEBKITBROWSER_MEMORYLIMIT    ?= "614400"
PLUGIN_MONITOR_WEBKITBROWSER_YOUTUBE_MEMORYLIMIT    ?= "614400"
PLUGIN_MONITOR_WEBKITBROWSER_APPS_MEMORYLIMIT    ?= "614400"
PLUGIN_MONITOR_WEBKITBROWSER_UX_MEMORYLIMIT    ?= "614400"
PLUGIN_MONITOR_NETFLIX_MEMORYLIMIT  ?= "614400"
PLUGIN_MONITOR_OPENCDMI_MEMORYLIMIT ?= "614400"
PLUGIN_MONITOR_COBALT_MEMORYLIMIT ?= "614400"

PACKAGECONFIG[monitor]                  = "-DPLUGIN_MONITOR=ON,-DPLUGIN_MONITOR=OFF,,"
PACKAGECONFIG[monitor_webkit]           = "-DPLUGIN_MONITOR_WEBKITBROWSER=ON \
                                           -DPLUGIN_MONITOR_WEBKITBROWSER_MEMORYLIMIT=${PLUGIN_MONITOR_WEBKITBROWSER_MEMORYLIMIT} \
                                           ,-DPLUGIN_MONITOR_WEBKITBROWSER=OFF,,"
PACKAGECONFIG[monitor_webkit_youtube]   = "-DPLUGIN_MONITOR_WEBKITBROWSER_YOUTUBE=ON \
                                           -DPLUGIN_MONITOR_WEBKITBROWSER_YOUTUBE_MEMORYLIMIT=${PLUGIN_MONITOR_WEBKITBROWSER_YOUTUBE_MEMORYLIMIT} \
                                           ,-DPLUGIN_MONITOR_WEBKITBROWSER_YOUTUBE=OFF,,"
PACKAGECONFIG[monitor_webkit_apps]      = "-DPLUGIN_MONITOR_WEBKITBROWSER_APPS=ON \
                                           -DPLUGIN_MONITOR_WEBKITBROWSER_APPS_MEMORYLIMIT=${PLUGIN_MONITOR_WEBKITBROWSER_APPS_MEMORYLIMIT} \
                                           ,-DPLUGIN_MONITOR_WEBKITBROWSER_APPS=OFF,,"
PACKAGECONFIG[monitor_webkit_ux]        = "-DPLUGIN_MONITOR_WEBKITBROWSER_UX=ON \
                                           -DPLUGIN_MONITOR_WEBKITBROWSER_UX_MEMORYLIMIT=${PLUGIN_MONITOR_WEBKITBROWSER_UX_MEMORYLIMIT} \
                                           ,-DPLUGIN_MONITOR_WEBKITBROWSER_UX=OFF,,"
PACKAGECONFIG[monitor_netflix]          = "-DPLUGIN_MONITOR_NETFLIX=ON \
                                           -DPLUGIN_MONITOR_NETFLIX_MEMORYLIMIT=${PLUGIN_MONITOR_NETFLIX_MEMORYLIMIT} \
                                           ,-DPLUGIN_MONITOR_NETFLIX=OFF,,"
PACKAGECONFIG[monitor_opencdmi]         = "-DPLUGIN_MONITOR_OPENCDMI=ON \
                                           -DPLUGIN_MONITOR_NETFLIX_OPENCDMI=${PLUGIN_MONITOR_OPENCDMI_MEMORYLIMIT} \
                                           ,-DPLUGIN_MONITOR_OPENCDMI=OFF,,"
PACKAGECONFIG[monitor_cobalt]           = "-DPLUGIN_MONITOR_COBALT=ON \
                                           -DPLUGIN_MONITOR_COBALT=${PLUGIN_MONITOR_COBALT_MEMORYLIMIT} \
                                           ,-DPLUGIN_MONITOR_COBALT=OFF,,"
